{
	"name": "@benev/toolbox",
	"version": "0.0.0-dev.0",
	"description": "web game infrastructure",
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"main": "x/main.js",
	"files": [
		"x",
		"s"
	],
	"scripts": {
		"build": "run-s clean && run-p importly compile",
		"start": "run-p http watch",
		"http": "http-server",
		"clean": "rimraf x && mkdirp x",
		"importly": "importly --host=node_modules < package-lock.json > x/importmap.json",
		"compile": "tsc",
		"watch": "tsc -w",
		"test": "cynic puppeteer x/tests.test.js"
	},
	"dependencies": {
		"@babylonjs/core": "^5.35.1",
		"@babylonjs/loaders": "^5.35.1",
		"@chasemoskal/magical": "^0.1.2",
		"cynic": "^0.1.0-dev.16",
		"lit": "^2.4.1",
		"simplex-noise": "^4.0.1"
	},
	"devDependencies": {
		"es-module-shims": "^1.6.2",
		"http-server": "^14.1.1",
		"importly": "^0.2.0",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"puppeteer": "^19.4.1",
		"rimraf": "^3.0.2",
		"typescript": "^4.9.3"
	},
	"keywords": [
		"web-games",
		"toolkit",
		"babylon",
		"babylonjs"
	],
	"repository": {
