{
	"name": "@benev/toolbox",
	"version": "0.3.1",
	"description": "web game infrastructure",
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"main": "x/index.js",
	"files": [
		"x",
		"s"
	],
	"scripts": {
		"prepare": "rm -rf node_modules/@babylonjs/core/index.d.ts node_modules/@babylonjs/core/index.js",
		"build": "run-s clean && run-p importly compile",
		"start": "run-p http watch",
		"http": "http-server x",
		"clean": "rimraf x && mkdirp x",
		"importly": "importly --host=node_modules < package-lock.json > x/importmap.json",
		"links": "run-s link-s link-modules",
		"link-s": "ln -s $(realpath s) x/s",
		"link-modules": "ln -s $(realpath node_modules) x/node_modules",
		"link-nubs": "rimraf node_modules/@benev/nubs && ln -s $(realpath ../nubs) node_modules/@benev",
		"compile": "run-p links sass && run-s typescript web",
		"typescript": "tsc",
		"sass": "sass s/web/templates/:x/",
		"web": "node x/web/build.js",
		"watch-typescript": "tsc -w",
		"watch-sass": "npm run sass -s -- --watch",
		"watch-web": "chokidar \"x/web/**/*\" -c \"npm run web -s && echo 'rebuilt web'\"",
		"watch": "run-p watch-sass watch-typescript watch-web",
		"test": "exit 0",
		"test-wip": "cynic puppeteer x/tests.test.js"
	},
	"dependencies": {
		"@benev/nubs": "^0.2.4",
		"@chasemoskal/magical": "^0.1.3",
		"@chasemoskal/snapstate": "^0.0.9",
		"lit": "^2.7.5",
		"simplex-noise": "^4.0.1"
	},
	"peerDependencies": {
		"@babylonjs/core": "^6.6.0",
		"@babylonjs/loaders": "^6.6.0"
	},
	"devDependencies": {
		"chokidar": "^3.5.3",
		"chokidar-cli": "^3.0.0",
		"cynic": "^0.2.1",
		"es-module-shims": "^1.7.3",
		"http-server": "^14.1.1",
		"importly": "^0.2.0",
		"mkdirp": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"puppeteer": "^20.5.0",
		"rimraf": "^5.0.1",
		"sass": "^1.62.1",
		"typescript": "^5.1.3",
		"xiome": "^0.0.45"
	},
	"keywords": [
		"web-games",
		"toolkit",
		"babylon",
		"babylonjs"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/benevolent-games/toolbox.git"
	},
	"bugs": {
		"url": "https://github.com/benevolent-games/toolbox/issues"
	},
	"homepage": "https://github.com/benevolent-games/toolbox#readme"
}
