		"@babylonjs/core": "^6.40.0",
		"@babylonjs/loaders": "^6.40.0"
	},
	"devDependencies": {
		"@benev/turtle": "^0.5.2",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-wasm": "^6.2.2",
		"chokidar": "^3.5.3",
		"chokidar-cli": "^3.0.0",
